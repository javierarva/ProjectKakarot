{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Anime{% endblock %}

{% block content %}

    <h1 class="titleView">Anime</h1>
    
    <div class="cards">
        {% for anime in animes %}
            <div onclick="window.location.href='{{ path('app_anime_view', { 'id': anime.id }) }}'" class="cardView">
                <div class="cardImage" style="background: url({{ asset('/img/views/'~ anime.picture) }});" role="img" aria-label="Imagen de {{ anime.title }}"></div>
                <div class="cardBody">
                    <h4>{{ anime.name }}</h4>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}