{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Razas{% endblock %}

{% block content %}

    <h1 class="titleView">Razas</h1>
    
    <div class="cards">
        {% for breed in breeds %}
            <div onclick="window.location.href='{{ path('app_breeds_view', { 'id': breed.id }) }}'" class="cardView">
                <div class="cardImage" style="background: url({{ asset('/img/views/'~ breed.picture) }});" role="img" aria-label="Imagen de {{ breed.title }}"></div>
                <div class="cardBody">
                    <h4>{{ breed.name }}</h4>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}