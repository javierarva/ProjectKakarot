{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Películas{% endblock %}

{% block content %}
    
    <h1 class="titleView">Anime: Películas</h1>

    <div class="cards">
        {% for movie in movies %}
            <div onclick="window.location.href='{{ path('app_movies_view', { 'id': movie.id }) }}'" class="cardView">
                <div class="cardImage" style="background: url({{ asset('/img/views/'~ movie.picture) }});" role="img" aria-label="Imagen de {{ movie.title }}"></div>
                <div class="cardBody">
                    <h4>{{ movie.name }}</h4>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}